<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <filter>
        <filter-name>admin-filter</filter-name>
        <filter-class>airline.filter.AdminFilter</filter-class>
    </filter>
    <filter>
        <filter-name>BaseURLFilter</filter-name>
        <filter-class>airline.filter.BaseURLFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>admin-filter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>BaseURLFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <servlet>
        <servlet-name>Accueil</servlet-name>
        <servlet-class>airline.servlet.Accueil</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>adminIndex</servlet-name>
        <servlet-class>airline.servlet.admin.Index</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>airline.servlet.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SFW</servlet-name>
        <servlet-class>airline.servlet.admin.SFW</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Tables</servlet-name>
        <servlet-class>airline.servlet.admin.Tables</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Accueil</servlet-name>
        <url-pattern>/accueil</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>Accueil</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>adminIndex</servlet-name>
        <url-pattern>/admin/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SFW</servlet-name>
        <url-pattern>/admin/sfw</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Tables</servlet-name>
        <url-pattern>/admin/tables</url-pattern>
    </servlet-mapping>

</web-app>
